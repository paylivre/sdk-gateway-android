<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_marginVertical="40dp"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:cardBackgroundColor="@color/white_color_paylivre_sdk"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textViewTitleInstructionsPix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/avenir_next_lt_pro_regular"
                android:text="@string/instructions_make_pix_title"
                android:textAlignment="center"
                android:textColor="@color/grey_dark_color_paylivre_sdk"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitleInstructionsPix"
                >

                <ImageView
                    android:id="@+id/iconSmartphone"
                    android:layout_width="18.8dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_centerVertical="true"
                    android:adjustViewBounds="true"
                    android:background="@color/white_color_paylivre_sdk"
                    android:contentDescription="@string/instructions_make_pix_text_1"
                    android:scaleType="centerCrop"
                    android:src="@drawable/icon_smartphone"
                    tools:ignore="TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/textInstructionPix1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/avenir_next_lt_pro_regular"
                    android:text="@string/instructions_make_pix_text_1"
                    android:textAlignment="textStart"
                    android:textColor="@color/grey_color_paylivre_sdk"
                    android:textSize="14sp"
                    android:lineHeight="18sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>