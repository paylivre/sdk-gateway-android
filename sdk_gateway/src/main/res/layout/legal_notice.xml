<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentLegalNotice"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <TextView
        android:id="@+id/titleLegalNotice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_legal_notice"
        android:contentDescription="@string/title_legal_notice"
        android:textAlignment="center"
        android:textColor="@color/secondary_color_paylivre_sdk"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textLegalNoticePart1"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="@string/legal_notice_part1"
        android:contentDescription="@string/legal_notice_part1_title"
        android:textAlignment="center"
        android:textColor="@color/grey_color_paylivre_sdk"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textLegalNoticePart2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="@string/legal_notice_part2"
        android:contentDescription="@string/legal_notice_part2_title"
        android:textAlignment="center"
        android:textColor="@color/grey_color_paylivre_sdk"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textLegalNoticePart3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:text="@string/legal_notice_part3"
        android:contentDescription="@string/legal_notice_part3_title"
        android:textAlignment="center"
        android:textColor="@color/grey_color_paylivre_sdk"
        android:textSize="14sp" />

</LinearLayout>

