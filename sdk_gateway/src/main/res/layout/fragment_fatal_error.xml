<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_color_paylivre_sdk"
    tools:context=".ui.error.FragmentFatalError">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/container_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="30dp"
        android:paddingVertical="40dp">

        <ImageView
            android:id="@+id/logoMerchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:maxWidth="160dp"
            android:maxHeight="160dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.18" />


        <TextView
            android:id="@+id/TextViewError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/avenir_next_lt_pro_bold"
            android:text="@string/error_title"
            android:textAlignment="textStart"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoMerchant" />


        <TextView
            android:id="@+id/TextViewMsgSubtitleError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextViewError" />


        <TextView
            android:id="@+id/textViewMsgSubtitle2Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:lineHeight="25dp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TextViewMsgSubtitleError" />

        <TextView
            android:id="@+id/textViewMsgSubtitle3Error"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:lineHeight="25dp"
            android:text=""
            android:textAlignment="textStart"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMsgSubtitle2Error" />

        <TextView
            android:id="@+id/btnTryAgain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="10dp"
            android:paddingRight="10dp"
            android:text="@string/try_again"
            android:textAlignment="textStart"
            android:textColor="@color/primary_color_paylivre_sdk"
            android:textSize="16sp"
            android:visibility="gone"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewMsgSubtitle3Error" />


        <TextView
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="42dp"
            android:clickable="true"
            android:fontFamily="@font/avenir_next_lt_pro_regular"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:paddingVertical="10dp"
            android:paddingRight="10dp"
            android:text="@string/close_underline"
            android:textAlignment="textStart"
            android:textColor="@color/primary_color_paylivre_sdk"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnTryAgain" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
